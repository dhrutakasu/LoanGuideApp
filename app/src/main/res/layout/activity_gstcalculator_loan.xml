<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoanUi.LoanActivity.Calculators.LoanGSTCalculatorActivity">

    <RelativeLayout
        android:id="@+id/RlHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/layout_topbar" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RlHeaderBar">
        <TextView
            android:id="@+id/TvInitialAmount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:padding="@dimen/_3sdp"
            android:text="@string/initial_amount"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/CardInitialAmount"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40ssp"
            android:layout_margin="@dimen/_1sdp"
            android:padding="@dimen/_10sdp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="@+id/TvInitialAmount"
            app:layout_constraintStart_toStartOf="@+id/TvInitialAmount"
            app:layout_constraintTop_toBottomOf="@+id/TvInitialAmount">

            <EditText
                android:id="@+id/EditInitialAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/enter_amount_rs"
                android:inputType="number"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/_12sdp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/TvGstRate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_3sdp"
            android:text="@string/gst_rate"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/CardInitialAmount"
            app:layout_constraintStart_toStartOf="@+id/CardInitialAmount"
            app:layout_constraintTop_toBottomOf="@+id/CardInitialAmount" />

        <androidx.cardview.widget.CardView
            android:id="@+id/CardGstRate"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40ssp"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="@+id/TvGstRate"
            app:layout_constraintStart_toStartOf="@+id/TvGstRate"
            app:layout_constraintTop_toBottomOf="@+id/TvGstRate">

            <EditText
                android:id="@+id/EditGstRate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/gst_rate"
                android:inputType="number"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/_12sdp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CardAnswer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_2sdp"
            app:layout_constraintEnd_toEndOf="@+id/CardGstRate"
            app:layout_constraintStart_toStartOf="@+id/CardGstRate"
            app:layout_constraintTop_toBottomOf="@+id/CardGstRate">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/TvGstAnsZero"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="0.6"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        android:text="@string/amount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/TvLoanAmountFirst"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/TvLoanAmountFirst" />

                    <TextView
                        android:id="@+id/TvGstAmountZero"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical|end"
                        android:padding="@dimen/_2sdp"
                        android:text="@string/_00_0000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/TvLoanAmountSecond"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@+id/TvLoanAnsFirst"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/TvGstAnsFirst"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_2sdp"
                        android:text="@string/gst_amount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/TvLoanAmountFirst"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/TvLoanAmountFirst" />

                    <TextView
                        android:id="@+id/TvGstAmountFirst"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:gravity="center_vertical|end"
                        android:layout_weight="0.4"
                        android:padding="@dimen/_2sdp"
                        android:text="@string/_00_0000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/TvLoanAmountSecond"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@+id/TvLoanAnsFirst"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/TvGstAnsSecond"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_2sdp"
                        android:text="@string/cgst"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/TvLoanAmountSecond"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/TvLoanAmountSecond" />

                    <TextView
                        android:id="@+id/TvGstAmountSecond"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:gravity="center_vertical|end"
                        android:layout_weight="0.4"
                        android:padding="@dimen/_2sdp"
                        android:text="@string/_00_0000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toTopOf="@+id/TvLoanAmountThird"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@+id/TvLoanAnsSecond"
                        app:layout_constraintTop_toBottomOf="@+id/TvLoanAmountFirst" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/TvGstAnsThird"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:padding="@dimen/_2sdp"
                        android:text="@string/sgst"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/TvLoanAmountThird"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/TvLoanAmountThird" />

                    <TextView
                        android:id="@+id/TvGstAmountThird"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_weight="0.4"
                        android:gravity="center_vertical|end"
                        android:padding="@dimen/_2sdp"
                        android:text="@string/_00_0000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@+id/TvLoanAnsThird"
                        app:layout_constraintTop_toBottomOf="@+id/TvLoanAmountSecond" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/TvGstAnsFourth"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="0.6"
                        android:padding="@dimen/_2sdp"
                        android:text="@string/total_payment_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/TvLoanAmountThird"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/TvLoanAmountThird" />

                    <TextView
                        android:id="@+id/TvGstAmountFourth"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:gravity="center_vertical|end"
                        android:layout_weight="0.4"
                        android:padding="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:text="@string/_00_0000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintStart_toEndOf="@+id/TvLoanAnsThird"
                        app:layout_constraintTop_toBottomOf="@+id/TvLoanAmountSecond" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/CardAnswer"
            app:layout_constraintStart_toStartOf="@+id/CardAnswer"
            app:layout_constraintTop_toBottomOf="@+id/CardAnswer"> <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/ic_button_view"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TvReset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableEnd="@drawable/ic_reset"
                android:padding="@dimen/_2sdp"
                android:text="@string/reset"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/ic_button_view"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TvCalculate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:drawableEnd="@drawable/ic_calculate"
                    android:gravity="center"
                    android:padding="@dimen/_2sdp"
                    android:text="@string/calculate"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </LinearLayout></LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>